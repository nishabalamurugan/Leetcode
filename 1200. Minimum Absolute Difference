class Solution:
    def minimumAbsDifference(self, arr: List[int]) -> List[List[int]]:
        sorted_lis=sorted(arr)
        res=[]
        min_diff=float(inf)
        for i in range(1,len(sorted_lis)):
            curr=abs(sorted_lis[i]-sorted_lis[i-1])
            if(curr<min_diff):
                min_diff=curr
        for i in range(1,len(sorted_lis)):
            if(abs(sorted_lis[i]-sorted_lis[i-1])==min_diff):
                res.append([min(sorted_lis[i],sorted_lis[i-1]),max(sorted_lis[i],sorted_lis[i-1])])
        print(min_diff)
        res.sort(key=lambda x:x[1])
        return res
        
